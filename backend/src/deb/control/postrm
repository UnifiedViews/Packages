#!/bin/sh
#

set -e


# TODO Remove a package (but not its configuration files): dpkg --remove foo.
# Remove a package (including its configuration files): dpkg --purge foo.
#
case "$1" in

    purge|abort-install|disappear)
    # backend jar and libs
	if [ -d /usr/share/unifiedviews ] ; then 
	    rm -r /usr/share/unifiedviews
	fi

    # configuration files
	if [ -d /etc/unifiedviews ] ; then 
	    rm -r /etc/unifiedviews
	fi
	
    # init script
	if [ -h /etc/init.d/unifiedviews_backend ] ; then 
	    rm /etc/init.d/unifiedviews_backend
	fi
	
    # init script
	if [ -h /usr/sbin/run_unifiedviews_backend ] ; then 
	    rm /usr/sbin/run_unifiedviews_backend
	fi
    
    # working dir
    if [ -h /var/lib/unifiedviews/ ] ; then 
	    rm -r /var/lib/unifiedviews/
	fi
     
    ;;
    remove)
    # backend jar and libs
	if [ -d /usr/share/unifiedviews ] ; then 
	    rm -r /usr/share/unifiedviews
	fi

    # init script
	if [ -h /etc/init.d/unifiedviews_backend ] ; then 
	    rm /etc/init.d/unifiedviews_backend
	fi
	
    # init script
	if [ -h /usr/sbin/run_unifiedviews_backend ] ; then 
	    rm /usr/sbin/run_unifiedviews_backend
	fi
    
    # working dir
    if [ -h /var/lib/unifiedviews/ ] ; then 
	    rm -r /var/lib/unifiedviews/
	fi
     
    ;;
    

    upgrade|failed-upgrade|abort-upgrade)

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
