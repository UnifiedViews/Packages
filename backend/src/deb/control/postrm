#!/bin/sh
# postrm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in

    purge|abort-install|disappear)
    # backend jar and libs
	if [ -d /usr/share/unifiedviews ] ; then 
	    rm -r /usr/share/unifiedviews
	fi

    # configuration files
	if [ -d /etc/unifiedviews ] ; then 
	    rm -r /etc/unifiedviews
	fi
	
    # init script
	if [ -h /etc/init.d/unifiedviews_backend ] ; then 
	    rm /etc/init.d/unifiedviews_backend
	fi
	
    # init script
	if [ -h /usr/sbin/run_unifiedviews_backend ] ; then 
	    rm /usr/sbin/run_unifiedviews_backend
	fi
    
    # working dir
    if [ -h /var/lib/unifiedviews/ ] ; then 
	    rm -r /var/lib/unifiedviews/
	fi
     
    ;;
    remove)
    # backend jar and libs
	if [ -d /usr/share/unifiedviews ] ; then 
	    rm -r /usr/share/unifiedviews
	fi

    # init script
	if [ -h /etc/init.d/unifiedviews_backend ] ; then 
	    rm /etc/init.d/unifiedviews_backend
	fi
	
    # init script
	if [ -h /usr/sbin/run_unifiedviews_backend ] ; then 
	    rm /usr/sbin/run_unifiedviews_backend
	fi
    
    # working dir
    if [ -h /var/lib/unifiedviews/ ] ; then 
	    rm -r /var/lib/unifiedviews/
	fi
     
    ;;
    

    upgrade|failed-upgrade|abort-upgrade)

    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
