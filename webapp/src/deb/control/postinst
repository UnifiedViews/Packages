#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

db_creadentials(){
    db_get frontend/mysql_dba_user
    DBA_USER=$RET

    db_get frontend/mysql_dba_password
    DBA_PASS=$RET
    
    #update frontend config
    sed --in-place \
    -e "s/database.sql.hostname = .*/database.sql.hostname = $address_host/" \
    -e "s/database.sql.port = .*/database.sql.port = 3306/" \
    -e "s/database.sql.user = .*/database.sql.user = $DBA_USER/" \
    -e "s/database.sql.password = .*/database.sql.password = $DBA_PASS/" \
    /etc/unifiedviews/frontend-config.properties
    

}


prepare_dir() {
   if [ -e "/etc/unifiedviews/frontend-config.properties" ]; then
       ln -s /etc/unifiedviews/frontend-config.properties /usr/share/unifiedviews/webapp/WEB-INF/config.properties
    fi

    # todo /var/lib/unifiedviews/target/dpu
    mkdir -p /var/log/unifiedviews/frontend
    chown tomcat7:tomcat7 /var/log/unifiedviews/frontend
    mkdir -p /usr/share/unifiedviews/webapp
    chown tomcat7:tomcat7 -R /usr/share/unifiedviews/webapp
}

restart_tomcat() {
    if [ -e /etc/init.d/tomcat7 ] ; then 
        service tomcat7 restart 
    fi 
}

case "$1" in
    configure)
    db_creadentials
    prepare_dir
    restart_tomcat
    db_stop

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0



